<?xml version="1.0" encoding="utf-8"?>
<!--
    Wizard Welcome Step
    First screen with two entry paths:
    - "Set up my server" -> Saved Server Setup flow
    - "Find other servers" -> Discovery Mode

    Design: Minimal, focused on the two primary actions
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Spacer to push content toward center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- App Logo / Icon -->
        <ImageView
            android:id="@+id/welcomeIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_cloud_connected"
            app:tint="?attr/colorPrimary"
            android:contentDescription="@null" />

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/wizard_welcome_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center" />

        <!-- Welcome Description -->
        <TextView
            android:id="@+id/welcomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/wizard_welcome_description"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="32dp" />

        <!-- Primary Action: Set up my server -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/setupServerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/wizard_setup_server_accessibility">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add_circle"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wizard_setup_server_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/wizard_setup_server_subtitle"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:alpha="0.6"
                    android:contentDescription="@null" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer between cards -->
        <View
            android:layout_width="0dp"
            android:layout_height="16dp" />

        <!-- Secondary Action: Find other servers -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/findServersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:cardBackgroundColor="?attr/colorSurface"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/wizard_find_servers_accessibility">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wizard_find_servers_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/wizard_find_servers_subtitle"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6"
                    android:contentDescription="@null" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer to push content toward center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>

</ScrollView>
