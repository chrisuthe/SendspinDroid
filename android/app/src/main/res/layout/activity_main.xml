<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendSpin Player"
        android:textSize="24sp"
        android:textStyle="bold"
        android:importantForAccessibility="yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/not_connected"
        android:textSize="16sp"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <Button
        android:id="@+id/discoverButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/discover_servers"
        android:contentDescription="@string/accessibility_discover_servers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusText" />

    <!-- Discovery Progress Indicator (shown during server discovery) -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/discoveryProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:importantForAccessibility="no"
        app:indicatorSize="32dp"
        app:trackThickness="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoverButton"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/discoveryStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Discovering servers..."
        android:textSize="14sp"
        android:visibility="gone"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoveryProgressIndicator"
        tools:visibility="visible" />

    <Button
        android:id="@+id/addManualServerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/add_server_manually"
        android:contentDescription="@string/accessibility_add_manual_server"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoveryStatusText" />

    <TextView
        android:id="@+id/serversLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Available Servers:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:labelFor="@id/serversRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addManualServerButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/serversRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toTopOf="@id/playbackControlsCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serversLabel" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playbackControlsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Connection Progress Indicator (shown when connecting to server) -->
            <LinearLayout
                android:id="@+id/connectionProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/connectionProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:importantForAccessibility="no"
                    app:trackThickness="4dp" />

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Connecting to server..."
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite" />

            </LinearLayout>

            <!-- Now Playing section with album art -->
            <LinearLayout
                android:id="@+id/nowPlayingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Album Art Container with Buffering Indicator -->
                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/albumArtView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_album"
                        android:contentDescription="@string/album_art"
                        android:background="@drawable/placeholder_album"
                        android:importantForAccessibility="yes" />

                    <!-- Buffering Indicator Overlay -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/bufferingIndicator"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:importantForAccessibility="no"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="?attr/colorPrimary"
                        tools:visibility="visible" />

                </FrameLayout>

                <!-- Track Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nowPlayingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Playing"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite" />

                    <TextView
                        android:id="@+id/metadataText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/previousButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/previous"
                    android:contentDescription="@string/accessibility_previous_button"
                    android:enabled="false" />

                <Button
                    android:id="@+id/playPauseButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/play"
                    android:enabled="false" />

                <Button
                    android:id="@+id/nextButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:contentDescription="@string/accessibility_next_button"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Progress bar for track position -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/currentPositionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textSize="10sp"
                    android:minWidth="32dp"
                    android:importantForAccessibility="no" />

                <SeekBar
                    android:id="@+id/progressSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:max="1000"
                    android:progress="0"
                    android:contentDescription="@string/accessibility_progress_slider" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textSize="10sp"
                    android:minWidth="32dp"
                    android:gravity="end"
                    android:importantForAccessibility="no" />

            </LinearLayout>

            <TextView
                android:id="@+id/volumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/volume"
                android:textSize="14sp"
                android:labelFor="@id/volumeSlider" />

            <com.google.android.material.slider.Slider
                android:id="@+id/volumeSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:value="75"
                android:stepSize="1"
                android:contentDescription="@string/accessibility_volume_slider"
                android:enabled="false" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
