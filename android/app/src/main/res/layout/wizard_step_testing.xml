<?xml version="1.0" encoding="utf-8"?>
<!--
    Wizard Step: Testing Connection
    Full-screen loading state while testing local/remote/proxy connection
    Shows progress and status messages
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="?attr/colorSurface">

    <!-- Connection Animation Container -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <!-- Background circle -->
        <View
            android:id="@+id/testingBackgroundCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:alpha="0.3" />

        <!-- Progress indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/testingProgressIndicator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorSize="80dp"
            app:trackThickness="4dp"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorSurfaceVariant" />

        <!-- Success icon (shown on success) -->
        <ImageView
            android:id="@+id/testingSuccessIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            app:tint="?attr/colorPrimary"
            android:visibility="gone"
            android:contentDescription="@string/accessibility_wizard_connection_success"
            tools:visibility="visible" />

        <!-- Error icon (shown on failure) -->
        <ImageView
            android:id="@+id/testingErrorIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_error"
            app:tint="?attr/colorError"
            android:visibility="gone"
            android:contentDescription="@string/accessibility_wizard_connection_failed" />

    </FrameLayout>

    <!-- Testing Title -->
    <TextView
        android:id="@+id/testingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/wizard_testing_title"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center" />

    <!-- Testing Status Message -->
    <TextView
        android:id="@+id/testingStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/wizard_testing_local"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        tools:text="Connecting to 192.168.1.100:8927..." />

    <!-- Error Details (shown on failure) -->
    <TextView
        android:id="@+id/testingErrorDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorError"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Connection refused. Check if the server is running." />

    <!-- Retry / Skip Buttons (shown on test failure) -->
    <LinearLayout
        android:id="@+id/testingButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testingRetryButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_testing_try_different" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testingSkipButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/wizard_testing_skip_local" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testingContinueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/wizard_next"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
