<?xml version="1.0" encoding="utf-8"?>
<!--
    Unified server list item layout with Material 3 design.
    Shows server name, configured connection methods, and optional quick connect chip.
    Features:
    - MaterialCardView for elevation and shadow
    - Server name as headline text
    - Connection method icons (WiFi, Cloud, VPN)
    - Quick Connect chip for discovered servers
    - Last connected time as supporting text
    - Ripple effect for touch feedback
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serverCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:rippleColor="?attr/colorControlHighlight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Connection Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_indicator_background"
            tools:backgroundTint="@color/status_discovered"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/serverName"
            app:layout_constraintBottom_toBottomOf="@id/serverName" />

        <!-- Server Name (Headline) -->
        <TextView
            android:id="@+id/serverName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="Living Room Speaker"
            app:layout_constraintEnd_toStartOf="@id/defaultIndicator"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Default Server Indicator (Star) -->
        <ImageView
            android:id="@+id/defaultIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            android:contentDescription="@string/accessibility_default_server"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/connectionMethodsContainer"
            app:layout_constraintTop_toTopOf="@id/serverName"
            app:layout_constraintBottom_toBottomOf="@id/serverName"
            tools:visibility="visible" />

        <!-- Connection Methods Container -->
        <LinearLayout
            android:id="@+id/connectionMethodsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/serverName"
            app:layout_constraintBottom_toBottomOf="@id/serverName">

            <!-- Local Connection Icon (WiFi) -->
            <ImageView
                android:id="@+id/iconLocal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_wifi"
                android:visibility="gone"
                android:contentDescription="@string/accessibility_connection_local"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:visibility="visible" />

            <!-- Remote Connection Icon (Cloud) -->
            <ImageView
                android:id="@+id/iconRemote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_cloud_connected"
                android:visibility="gone"
                android:contentDescription="@string/accessibility_connection_remote"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:visibility="visible" />

            <!-- Proxy Connection Icon (VPN Key) -->
            <ImageView
                android:id="@+id/iconProxy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_vpn_key"
                android:visibility="gone"
                android:contentDescription="@string/accessibility_connection_proxy"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Server Subtitle (Last Connected or Address) -->
        <TextView
            android:id="@+id/serverSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            tools:text="Connected 2 hours ago"
            app:layout_constraintEnd_toStartOf="@id/quickConnectChip"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintTop_toBottomOf="@id/serverName" />

        <!-- Quick Connect Chip (for discovered servers) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/quickConnectChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_connect"
            android:visibility="gone"
            app:chipBackgroundColor="?attr/colorSecondaryContainer"
            app:chipMinHeight="28dp"
            app:chipMinTouchTargetSize="32dp"
            app:chipStrokeWidth="0dp"
            app:textStartPadding="8dp"
            app:textEndPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serverName"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
