<?xml version="1.0" encoding="utf-8"?>
<!--
    Wizard Step 3: Remote Access
    Optional - enter 26-character Remote ID or scan QR code
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <!-- Step Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wizard_remote_title"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="?attr/colorOnSurface" />

    <!-- Step Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/wizard_remote_description"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Remote Connection Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_cloud_connected"
        app:tint="?attr/colorPrimary"
        android:contentDescription="@null" />

    <!-- Remote ID Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/remoteIdInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/remote_id"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_camera"
        app:endIconContentDescription="@string/accessibility_scan_qr_button"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/remoteIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="31"
            android:maxLines="1"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            android:imeOptions="actionNext"
            android:contentDescription="@string/accessibility_remote_id_input"
            tools:text="VVPN3-TLP34-YMGIZ-DINCE-KQKSI-R" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Hint text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/remote_id_hint"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textStyle="italic" />

    <!-- Skip hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/wizard_remote_skip"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant" />

</LinearLayout>
