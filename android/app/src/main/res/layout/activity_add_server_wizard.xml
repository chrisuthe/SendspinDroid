<?xml version="1.0" encoding="utf-8"?>
<!--
    Add Server Wizard Activity Layout
    Full-screen stepper with proper keyboard handling via adjustResize.

    Structure:
    - CoordinatorLayout as root for proper scroll behavior
    - AppBarLayout with MaterialToolbar and progress indicator
    - ViewPager2 for wizard steps (scrollable content area)
    - Fixed bottom bar for navigation buttons (rises above keyboard)
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface">

    <!-- AppBar with toolbar and progress indicator -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <!-- Toolbar with close button -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"
            app:navigationContentDescription="@android:string/cancel"
            app:title="@string/wizard_title_add_server"
            app:titleTextColor="?attr/colorOnSurface" />

        <!-- Step indicator tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextColor="?attr/colorOnSurfaceVariant"
            app:tabRippleColor="?attr/colorControlHighlight"
            app:tabMinWidth="64dp" />

        <!-- Progress indicator (subtle line at bottom of app bar) -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="20"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorSurfaceVariant"
            app:trackThickness="4dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content area - ViewPager2 for wizard steps -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ViewPager2 takes full height, individual steps handle their own scrolling -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/wizardPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed bottom navigation bar -->
    <!-- This LinearLayout stays at the bottom and rises above the keyboard
         thanks to adjustResize window soft input mode -->
    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="8dp">

        <!-- Back button - hidden on first step -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_back"
            android:visibility="invisible"
            tools:visibility="visible" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Skip button - shown on optional steps -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_skip"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Next/Save button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/wizard_next" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
