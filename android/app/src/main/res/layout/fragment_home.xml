<?xml version="1.0" encoding="utf-8"?>
<!-- Home fragment with three horizontal carousels -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".ui.navigation.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Recently Played Section -->
        <LinearLayout
            android:id="@+id/recentlyPlayedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/recentlyPlayedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_recently_played"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentlyPlayedRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/recentlyPlayedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/recentlyPlayedLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Recently Added Section -->
        <LinearLayout
            android:id="@+id/recentlyAddedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/recentlyAddedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_recently_added"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentlyAddedRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/recentlyAddedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/recentlyAddedLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Albums Section -->
        <LinearLayout
            android:id="@+id/albumsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/albumsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_albums"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albumsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/albumsEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/albumsLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Artists Section -->
        <LinearLayout
            android:id="@+id/artistsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/artistsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_artists"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artistsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/artistsEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/artistsLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Playlists Section -->
        <LinearLayout
            android:id="@+id/playlistsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/playlistsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_playlists"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlistsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/playlistsEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/playlistsLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Radio Stations Section -->
        <LinearLayout
            android:id="@+id/radioSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/radioTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp"
                android:text="@string/home_radio"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radioRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/radioEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:text="@string/home_empty_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/radioLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
