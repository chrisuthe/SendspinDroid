<?xml version="1.0" encoding="utf-8"?>
<!-- Placeholder drawable for album art when no artwork is available.
     Uses a music note icon on a subtle gray background. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Music note icon (vector path) -->
    <item
        android:gravity="center"
        android:width="40dp"
        android:height="40dp">
        <vector
            android:width="40dp"
            android:height="40dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <!-- Material Design music note icon -->
            <path
                android:fillColor="#9E9E9E"
                android:pathData="M12,3v10.55c-0.59,-0.34 -1.27,-0.55 -2,-0.55c-2.21,0 -4,1.79 -4,4s1.79,4 4,4s4,-1.79 4,-4V7h4V3H12z" />
        </vector>
    </item>
</layer-list>
