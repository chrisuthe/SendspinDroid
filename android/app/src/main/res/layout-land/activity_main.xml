<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape-optimized layout: full-height album art left, toolbar+controls right -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Blurred rotated album art background -->
    <ImageView
        android:id="@+id/backgroundArtView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:importantForAccessibility="no" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0.6"
            android:background="?attr/colorSurface"
            app:navigationIcon="@null"
            app:title="@string/app_name"
            app:titleCentered="false" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area - insets handled programmatically in MainActivity -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContentArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ============================================================ -->
        <!-- SERVER LIST VIEW - Shows saved and discovered servers        -->
        <!-- Uses embedded empty state for "Searching..." display         -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/serverListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Server list with sections -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serverListRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="88dp"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Empty state (shown when no servers at all) -->
            <LinearLayout
                android:id="@+id/emptyServerListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_server"
                    android:alpha="0.4"
                    android:importantForAccessibility="no"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/emptyStateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/no_servers_yet"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/emptyStateSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/searching_for_servers"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.7"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/emptyStateProgress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================================================ -->
        <!-- MANUAL ENTRY VIEW - Shown when user wants to enter manually  -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manualEntryView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/manualStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_servers_found"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:accessibilityLiveRegion="polite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/searchAgainButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/search_again"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/manualStatusText" />

            <Button
                android:id="@+id/addManualServerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/add_server_manually"
                android:contentDescription="@string/accessibility_add_manual_server"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_server"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchAgainButton" />

            <TextView
                android:id="@+id/serversLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/available_servers"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:labelFor="@id/serversRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addManualServerButton" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serversRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/serversLabel" />

            <!-- Empty state when no servers are available in manual entry view -->
            <LinearLayout
                android:id="@+id/manualEntryEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/serversLabel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_server"
                    android:alpha="0.4"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/empty_server_list_title"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/empty_server_list_subtitle"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.7"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================================================ -->
        <!-- NOW PLAYING VIEW - Shown when connected to a server          -->
        <!-- Landscape: Full-height album art left, controls right        -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nowPlayingView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <!-- Connection Progress (shown during connecting) -->
            <LinearLayout
                android:id="@+id/connectionProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/connectionProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:importantForAccessibility="no"
                    app:indicatorSize="64dp"
                    app:trackThickness="4dp" />

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/connecting"
                    android:textSize="16sp"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite" />

            </LinearLayout>

            <!-- Now Playing Content - Full height album art left, controls right -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nowPlayingContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- LEFT SIDE: Album Art (square, sized to fit available height) -->
                <FrameLayout
                    android:id="@+id/albumArtContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,1:1">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/albumArtView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_album"
                            android:contentDescription="@string/album_art"
                            android:importantForAccessibility="yes" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Buffering Indicator Overlay -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/bufferingIndicator"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:importantForAccessibility="no"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="?attr/colorPrimary"
                        tools:visibility="visible" />

                </FrameLayout>

                <!-- RIGHT SIDE: Title bar + Track Info + Controls -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/controlsContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toEndOf="@id/albumArtContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- Track Info - Title -->
                    <TextView
                        android:id="@+id/nowPlayingText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/not_playing"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground"
                        android:letterSpacing="-0.02"
                        android:lineSpacingMultiplier="1.1"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintBottom_toTopOf="@id/metadataText" />

                    <!-- Metadata (artist/album) -->
                    <TextView
                        android:id="@+id/metadataText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.9"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nowPlayingText"
                        app:layout_constraintBottom_toTopOf="@id/groupNameText" />

                    <!-- Group name display -->
                    <TextView
                        android:id="@+id/groupNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="?attr/colorPrimary"
                        android:alpha="0.9"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/metadataText"
                        app:layout_constraintBottom_toTopOf="@id/playbackControlsContainer" />

                    <!-- Playback Controls Container -->
                    <LinearLayout
                        android:id="@+id/playbackControlsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/groupNameText"
                        app:layout_constraintBottom_toTopOf="@id/volumeContainer">

                        <!-- Main Controls: Previous, Play/Pause, Next, Switch Group -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/previousButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/accessibility_previous_button"
                            android:enabled="false"
                            android:focusable="true"
                            android:nextFocusRight="@id/playPauseButton"
                            app:icon="@drawable/ic_skip_previous"
                            app:iconSize="26dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playPauseButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:stateListAnimator="@animator/button_scale"
                            android:contentDescription="@string/accessibility_play_button"
                            android:enabled="false"
                            android:focusable="true"
                            android:nextFocusLeft="@id/previousButton"
                            android:nextFocusRight="@id/nextButton"
                            app:icon="@drawable/ic_play"
                            app:iconSize="32dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="12dp"
                            android:contentDescription="@string/accessibility_next_button"
                            android:enabled="false"
                            android:focusable="true"
                            android:nextFocusLeft="@id/playPauseButton"
                            android:nextFocusRight="@id/switchGroupButton"
                            app:icon="@drawable/ic_skip_next"
                            app:iconSize="26dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/switchGroupButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="20dp"
                            android:contentDescription="@string/accessibility_switch_group_button"
                            android:enabled="false"
                            android:focusable="true"
                            android:nextFocusLeft="@id/nextButton"
                            app:icon="@drawable/ic_swap_horiz"
                            app:iconSize="22dp" />

                    </LinearLayout>

                    <!-- Volume Control -->
                    <LinearLayout
                        android:id="@+id/volumeContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/playbackControlsContainer"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_volume_down"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:alpha="0.7" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/volumeSlider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="75"
                            android:stepSize="1"
                            android:contentDescription="@string/accessibility_volume_slider"
                            android:enabled="false" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_volume_up"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:alpha="0.7" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FAB for adding servers (visible on server list view) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addServerFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_server"
        android:src="@drawable/ic_add"
        android:visibility="visible"
        app:tint="?attr/colorOnPrimaryContainer"
        app:backgroundTint="?attr/colorPrimaryContainer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
